<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_title_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_title_min_height"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textAllCaps="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#eeeeee"
        android:dividerHeight="@dimen/widget_list_divider_height"
        android:padding="@dimen/card_view_margin"
        tools:listitem="@layout/collection_widget_list_item" />

</LinearLayout>